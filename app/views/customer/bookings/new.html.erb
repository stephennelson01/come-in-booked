<div class="bg-slate-50 min-h-screen">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 py-10">

    <div class="flex items-end justify-between gap-6">
      <div>
        <h1 class="text-2xl font-semibold text-slate-900">Book</h1>
        <p class="mt-2 text-sm text-slate-600">
          <span class="font-semibold text-slate-900"><%= @service.name %></span>
          <span class="text-slate-400">Â·</span>
          <%= @business.name %>
        </p>
      </div>
      <%= link_to "Back to search", search_path(q: @service.name), class: "text-sm font-semibold text-blue-700 hover:underline" %>
    </div>

    <div class="mt-6 rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
      <%= form_with url: customer_bookings_path, method: :post, local: true, class: "space-y-6" do |f| %>
        <%= hidden_field_tag :service_id, @service.id %>

        <div>
          <%= label_tag :customer_name, "Your name", class: "block text-sm font-semibold text-slate-800" %>
          <%= text_field_tag :customer_name, "",
              class: "mt-2 w-full rounded-xl border border-slate-300 bg-white px-4 py-3 text-slate-900 focus:outline-none focus:ring-2",
              style: "--tw-ring-color:#2f66ff;",
              placeholder: "e.g. Stephen Etuokwu" %>
        </div>

        <div>
          <%= label_tag :starts_at, "Choose date & time", class: "block text-sm font-semibold text-slate-800" %>
          <%= datetime_local_field_tag :starts_at, nil,
              class: "mt-2 w-full rounded-xl border border-slate-300 bg-white px-4 py-3 text-slate-900 focus:outline-none focus:ring-2",
              style: "--tw-ring-color:#2f66ff;" %>
          <p class="mt-2 text-xs text-slate-500">
            Duration: <%= @service.duration_min.presence || 30 %> minutes
          </p>
        </div>

        <button type="submit"
                class="inline-flex items-center justify-center rounded-xl px-6 py-3 font-semibold text-white shadow-sm"
                style="background:#2f66ff;">
          Confirm booking
        </button>
      <% end %>
    </div>
  </div>
</div>
