<%# app/views/customer/bookings/show.html.erb %>

<div class="bg-slate-50 min-h-screen">
  <div class="page-wrap py-10">

    <div class="flex flex-col sm:flex-row sm:items-end sm:justify-between gap-6">
      <div>
        <h1 class="text-2xl font-semibold text-slate-900">Booking</h1>
        <p class="mt-2 text-sm text-slate-600">
          Reference: <span class="font-semibold text-slate-900">#<%= @booking.id %></span>
        </p>
      </div>

      <div class="flex flex-wrap gap-3">
        <%= link_to "Back to bookings", customer_bookings_path, class: "btn btn-outline" %>
        <%= link_to "Back home", root_path, class: "btn btn-outline hover:border-red-300 hover:text-red-700" %>
      </div>
    </div>

    <% if @just_confirmed %>
      <div class="mt-6 rounded-3xl border border-green-200 bg-green-50 p-5">
        <p class="font-semibold text-green-800">Booking confirmed ✅</p>
        <p class="mt-1 text-sm text-green-700">
          The merchant has received your booking request.
        </p>
      </div>
    <% end %>

    <div class="mt-6 card card-pad">
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-sm">
        <div>
          <p class="text-slate-500">Business</p>
          <p class="font-semibold text-slate-900"><%= @booking.business&.name || "—" %></p>
        </div>

        <div>
          <p class="text-slate-500">Status</p>
          <p class="font-semibold text-slate-900"><%= @booking.status %></p>
        </div>

        <div>
          <p class="text-slate-500">Date</p>
          <p class="font-semibold text-slate-900">
            <%= @booking.start_time ? @booking.start_time.strftime("%d %b %Y") : "Not set" %>
          </p>
        </div>

        <div>
          <p class="text-slate-500">Time</p>
          <p class="font-semibold text-slate-900">
            <% if @booking.start_time && @booking.end_time %>
              <%= @booking.start_time.strftime("%H:%M") %> – <%= @booking.end_time.strftime("%H:%M") %>
            <% elsif @booking.start_time %>
              <%= @booking.start_time.strftime("%H:%M") %>
            <% else %>
              Not set
            <% end %>
          </p>
        </div>

        <div>
          <p class="text-slate-500">Service</p>
          <p class="font-semibold text-slate-900"><%= @service&.name || "—" %></p>
        </div>

        <div>
          <p class="text-slate-500">Customer name</p>
          <p class="font-semibold text-slate-900"><%= @booking.customer_name.presence || "—" %></p>
        </div>
      </div>
    </div>

  </div>
</div>
