<!-- HERO (deep blue) -->
<section class="relative overflow-hidden">
  <div class="absolute inset-0 -z-10"
       style="background:
         radial-gradient(1200px 700px at 20% -10%, rgba(59,130,246,0.25), transparent 65%),
         radial-gradient(1200px 700px at 80% 0%, rgba(96,165,250,0.18), transparent 65%),
         linear-gradient(180deg, #0b1b4a 0%, #0f245f 45%, #0b1b4a 100%);">
  </div>

  <div class="max-w-7xl mx-auto px-4 pt-24 pb-24 sm:pt-28 sm:pb-28 text-white">
    <h1 class="font-display text-5xl sm:text-7xl leading-[1.05] tracking-tight drop-shadow-[0_2px_8px_rgba(0,0,0,0.35)] text-center">
      Book local beauty, style, fashion and<br class="hidden sm:block"> wellness services
    </h1>

    <!-- push the pill lower -->
    <div class="mt-10 sm:mt-12"></div>

    <!-- SEARCH PILL -->
    <%= form_with url: search_path, method: :get, local: true,
      html: { data: { controller: "searchbar" },
              class: "mx-auto bg-white text-gray-900 rounded-[999px] shadow-2xl ring-1 ring-black/10 overflow-hidden max-w-5xl" } do %>

      <div class="flex flex-col sm:flex-row divide-y sm:divide-y-0 sm:divide-x divide-gray-200 items-stretch">
        <!-- what -->
        <label class="flex items-center gap-3 px-6 py-4 sm:w-1/3">
          <span>ğŸ”</span>
          <input name="q" type="text" placeholder="All treatments and venues"
                 class="w-full outline-none placeholder:text-gray-500 text-[15px]" />
        </label>

        <!-- where -->
        <div class="flex items-center gap-3 px-6 py-4 sm:w-1/3">
          <span>ğŸ“</span>
          <input name="where" type="text" placeholder="Current location"
                 data-searchbar-target="whereInput"
                 class="w-full outline-none placeholder:text-gray-500 text-[15px]" />
          <input type="hidden" name="lat" data-searchbar-target="lat">
          <input type="hidden" name="lng" data-searchbar-target="lng">
          <button type="button"
                  class="ml-2 text-sm rounded-full px-3 py-1.5 border border-gray-300 hover:bg-gray-50"
                  data-action="click->searchbar#useCurrent">
            Use current
          </button>
        </div>

        <!-- date -->
        <label class="flex items-center gap-3 px-6 py-4 sm:w-1/6">
          <span>ğŸ“…</span>
          <input name="date" type="date" class="w-full outline-none text-[15px]" />
        </label>

        <!-- time -->
        <label class="flex items-center gap-3 px-6 py-4 sm:w-1/6">
          <span>â°</span>
          <input name="time" type="time" class="w-full outline-none text-[15px]" />
        </label>

        <!-- submit -->
        <div class="px-4 py-2 flex items-center justify-end">
          <button class="rounded-full px-6 py-3 bg-blue-700 text-white hover:bg-blue-800 transition shadow">
            Search
          </button>
        </div>
      </div>
    <% end %>

    <p class="mt-6 text-center text-blue-100">
      <span class="font-semibold"><%= number_with_delimiter(rand(280_000..420_000)) %></span> appointments booked today
    </p>
  </div>
</section>

