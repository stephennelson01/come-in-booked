<div class="max-w-3xl mx-auto px-4 py-10">
  <h1 class="text-2xl font-semibold mb-4">Start booking</h1>
  <%= form_with url: "/checkout/details", method: :post, local: true do %>
    <div class="grid grid-cols-1 gap-4">
      <input type="text" name="name" placeholder="Your name" class="border rounded px-3 py-2">
      <input type="email" name="email" placeholder="Email" class="border rounded px-3 py-2">
      <button class="rounded-full px-5 py-2 bg-blue-700 text-white">Continue</button>
    </div>
  <% end %>
</div>
