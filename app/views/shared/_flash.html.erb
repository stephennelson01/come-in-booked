<% if flash.any? %>
  <div class="fixed top-20 left-0 right-0 z-50 px-4 sm:px-6">
    <div class="max-w-5xl mx-auto space-y-3">
      <% flash.each do |type, message| %>
        <% next if message.blank? %>

        <% base =
          "rounded-2xl border border-white/15 bg-white/10 backdrop-blur px-5 py-4 text-white shadow-sm " \
          "transition duration-200 transform"
        %>

        <div
          data-controller="flash"
          data-flash-timeout-value="3000"
          class="<%= base %>">

          <div class="flex items-start justify-between gap-4">
            <p class="text-sm sm:text-base font-semibold">
              <%= message %>
            </p>

            <button
              type="button"
              class="shrink-0 rounded-full px-3 py-1 text-xs font-semibold border border-white/20 text-white/90 hover:bg-white/10 transition"
              data-action="click->flash#dismiss">
              Close
            </button>
          </div>
        </div>

      <% end %>
    </div>
  </div>
<% end %>
