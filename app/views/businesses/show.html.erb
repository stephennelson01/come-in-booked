<%# app/views/businesses/show.html.erb %>

<div class="bg-slate-50 min-h-screen">
  <div class="page-wrap py-10">

    <!-- Header -->
    <div class="card card-pad">
      <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-6">
        <div class="min-w-0">
          <h1 class="text-3xl font-semibold text-slate-900 break-words"><%= @business.name %></h1>
          <p class="mt-2 text-sm text-slate-600">
            ComeInBooked business page · <span class="text-slate-500">/<%= @business.slug %></span>
          </p>

          <% if @business.description.present? %>
            <p class="mt-4 text-slate-700"><%= @business.description %></p>
          <% end %>
        </div>

        <div class="flex flex-wrap items-center gap-3 shrink-0">
          <%= link_to "Search services", search_path, class: "btn btn-primary" %>
          <%= link_to "Back home", root_path, class: "back-home-link text-sm font-semibold" %>
        </div>
      </div>
    </div>

    <!-- Main -->
    <div class="mt-8 grid grid-cols-1 lg:grid-cols-12 gap-6">

      <!-- Services list -->
      <div class="lg:col-span-8">
        <div class="card card-pad">
          <h2 class="text-lg font-semibold text-slate-900">Services</h2>
          <p class="mt-1 text-sm text-slate-600">Pick a service and book instantly.</p>

          <% if @services.present? && @services.any? %>
            <div class="mt-6 space-y-4">
              <% @services.each do |service| %>
                <% price_label =
                    if service.respond_to?(:price_cents) && service.price_cents.present?
                      pounds = service.price_cents.to_i / 100.0
                      "£#{format('%.2f', pounds)}"
                    else
                      "—"
                    end
                %>

                <div class="rounded-2xl border border-slate-200 bg-white p-5 hover:bg-slate-50 transition">
                  <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4">

                    <div class="min-w-0">
                      <p class="text-base font-semibold text-slate-900 break-words"><%= service.name %></p>

                      <% if service.respond_to?(:description) && service.description.present? %>
                        <p class="mt-2 text-sm text-slate-600"><%= service.description %></p>
                      <% end %>

                      <div class="mt-3 flex flex-wrap gap-2 text-xs text-slate-600">
                        <% if service.respond_to?(:duration_min) && service.duration_min.present? %>
                          <span class="inline-flex items-center rounded-full border border-slate-200 bg-slate-50 px-3 py-1">
                            <%= service.duration_min %> min
                          </span>
                        <% end %>

                        <span class="inline-flex items-center rounded-full border border-slate-200 bg-slate-50 px-3 py-1">
                          Price: <span class="ml-1 font-semibold text-slate-900"><%= price_label %></span>
                        </span>
                      </div>
                    </div>

                    <div class="flex flex-wrap gap-3 shrink-0">
                      <% if user_signed_in? %>
                        <%= link_to "Book now",
                            new_customer_booking_path(service_id: service.id),
                            class: "btn btn-primary" %>
                      <% else %>
                        <%= link_to "Book now", user_flow_path, class: "btn btn-primary" %>
                      <% end %>

                      <%= link_to "View in search",
                          search_path(q: service.name),
                          class: "btn btn-outline" %>
                    </div>

                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="mt-6 rounded-2xl border border-slate-200 bg-slate-50 p-6">
              <p class="font-semibold text-slate-900">No services yet</p>
              <p class="mt-2 text-sm text-slate-600">This business hasn’t added services yet.</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-4 space-y-6">
        <div class="card card-pad">
          <h3 class="font-semibold text-slate-900">Business info</h3>
          <div class="mt-4 text-sm">
            <p class="text-slate-600">Slug</p>
            <p class="mt-1 font-semibold text-slate-900 break-words"><%= @business.slug %></p>
          </div>
        </div>

        <div class="card card-pad">
          <h3 class="font-semibold text-slate-900">Locations</h3>
          <p class="mt-2 text-sm text-slate-600">No locations yet. (We’ll add this later.)</p>
        </div>

        <div class="card card-pad">
          <h3 class="font-semibold text-slate-900">Reviews</h3>
          <p class="mt-2 text-sm text-slate-600">Reviews will appear here once we enable ratings.</p>
        </div>
      </div>

    </div>
  </div>
</div>
