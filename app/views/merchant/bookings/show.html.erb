<%# app/views/merchant/bookings/show.html.erb %>

<div class="page-wrap py-10">
  <div class="flex items-end justify-between gap-6">
    <div>
      <h1 class="text-2xl font-semibold text-white">Booking</h1>
      <p class="mt-2 text-white/70 text-sm">
        Reference: <span class="text-white font-semibold">#<%= @booking.id %></span>
      </p>
    </div>

    <%= link_to "Back to bookings", merchant_bookings_path,
        class: "inline-flex px-5 py-2.5 rounded-full text-sm font-semibold border border-white/20 text-white hover:bg-white/10" %>
  </div>

  <div class="mt-6 rounded-3xl border border-white/10 bg-white/5 backdrop-blur p-6">
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-5 text-sm">
      <div>
        <p class="text-white/60">Customer name</p>
        <p class="mt-1 text-white font-semibold"><%= @booking.customer_name.presence || "—" %></p>
      </div>

      <div>
        <p class="text-white/60">Status</p>
        <p class="mt-1 text-white font-semibold"><%= @booking.status %></p>
      </div>

      <div>
        <p class="text-white/60">Service</p>
        <p class="mt-1 text-white font-semibold"><%= @service&.name || "—" %></p>
      </div>

      <div>
        <p class="text-white/60">Time</p>
        <p class="mt-1 text-white font-semibold">
          <% if @booking.start_time && @booking.end_time %>
            <%= @booking.start_time.strftime("%d %b %Y • %H:%M") %> – <%= @booking.end_time.strftime("%H:%M") %>
          <% elsif @booking.start_time %>
            <%= @booking.start_time.strftime("%d %b %Y • %H:%M") %>
          <% else %>
            —
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>
