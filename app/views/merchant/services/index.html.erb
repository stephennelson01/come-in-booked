<div class="flex items-center justify-between mb-8">
  <h1 class="text-2xl font-semibold">Services</h1>

  <%= link_to "Add service", new_merchant_service_path,
      class: "rounded-full px-6 py-3 font-semibold text-white shadow-sm",
      style: "background:#2f66ff;" %>
</div>

<div class="space-y-4">
  <% @services.each do |service| %>
    <div class="rounded-xl border border-slate-200 bg-white p-5 flex justify-between items-center">
      <div>
        <p class="font-semibold"><%= service.name %></p>
        <p class="text-sm text-slate-500">
          ₦<%= service.price_cents / 100 %> · <%= service.duration_min %> mins
        </p>
        <% unless service.active %>
          <span class="text-xs text-red-500 font-semibold">Inactive</span>
        <% end %>
      </div>

      <%= link_to "Edit", edit_merchant_service_path(service),
          class: "font-semibold",
          style: "color:#2f66ff;" %>
    </div>
  <% end %>
</div>
