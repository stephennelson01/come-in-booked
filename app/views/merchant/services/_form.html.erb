<%= form_with model: @service, url: (@service.persisted? ? merchant_service_path(@service) : merchant_services_path),
              method: (@service.persisted? ? :patch : :post),
              local: true,
              html: { multipart: true },
              class: "space-y-6" do |f| %>

  <% if @service.errors.any? %>
    <div class="rounded-2xl border border-red-200 bg-red-50 p-4">
      <p class="font-semibold text-red-800">Please fix the following:</p>
      <ul class="mt-2 list-disc pl-5 text-sm text-red-700">
        <% @service.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="md:col-span-2">
      <%= f.label :name, class: "block text-sm font-semibold text-slate-800" %>
      <%= f.text_field :name,
        class: "mt-2 w-full rounded-xl border border-slate-300 bg-white px-4 py-3 text-slate-900 focus:outline-none focus:ring-2",
        style: "--tw-ring-color:#2f66ff;" %>
    </div>

    <% if @service.has_attribute?(:description) %>
      <div class="md:col-span-2">
        <%= f.label :description, class: "block text-sm font-semibold text-slate-800" %>
        <%= f.text_area :description, rows: 4,
          class: "mt-2 w-full rounded-xl border border-slate-300 bg-white px-4 py-3 text-slate-900 focus:outline-none focus:ring-2",
          style: "--tw-ring-color:#2f66ff;" %>
      </div>
    <% end %>

    <div>
      <%= f.label :duration_min, "Duration (minutes)", class: "block text-sm font-semibold text-slate-800" %>
      <%= f.number_field :duration_min, min: 5, step: 5,
        class: "mt-2 w-full rounded-xl border border-slate-300 bg-white px-4 py-3 text-slate-900 focus:outline-none focus:ring-2",
        style: "--tw-ring-color:#2f66ff;" %>
    </div>

    <div>
      <%= f.label :price_cents, "Price (in cents)", class: "block text-sm font-semibold text-slate-800" %>
      <%= f.number_field :price_cents, min: 0, step: 50,
        class: "mt-2 w-full rounded-xl border border-slate-300 bg-white px-4 py-3 text-slate-900 focus:outline-none focus:ring-2",
        style: "--tw-ring-color:#2f66ff;" %>
      <p class="mt-2 text-xs text-slate-500">Example: £20.00 → 2000</p>
    </div>

    <% if @service.has_attribute?(:active) %>
      <div class="md:col-span-2 flex items-center gap-3">
        <%= f.check_box :active, class: "h-5 w-5 rounded border-slate-300" %>
        <%= f.label :active, "Active (visible to customers)", class: "text-sm text-slate-700" %>
      </div>
    <% end %>

    <!-- Image upload -->
    <div class="md:col-span-2">
      <%= f.label :image, "Service image", class: "block text-sm font-semibold text-slate-800" %>
      <p class="mt-1 text-xs text-slate-500">Recommended: 1600×1000 (or any landscape). JPG/PNG.</p>

      <div class="mt-3 grid grid-cols-1 md:grid-cols-3 gap-4 items-start">
        <div class="md:col-span-2">
          <%= f.file_field :image,
              accept: "image/png,image/jpeg,image/jpg,image/webp",
              class: "block w-full text-sm text-slate-700 file:mr-4 file:rounded-lg file:border-0 file:bg-slate-100 file:px-4 file:py-2 file:font-semibold hover:file:bg-slate-200" %>
        </div>

        <div class="rounded-2xl border border-slate-200 bg-slate-50 overflow-hidden">
          <% if @service.image.attached? %>
            <%= image_tag @service.image, class: "w-full h-32 object-cover" %>
          <% else %>
            <div class="h-32 flex items-center justify-center text-sm text-slate-500">
              No image yet
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="flex flex-col sm:flex-row gap-3 pt-2">
    <%= f.submit (@service.persisted? ? "Update service" : "Save service"),
      class: "inline-flex items-center justify-center rounded-xl px-6 py-3 font-semibold text-white shadow-sm hover:opacity-95",
      style: "background:#2f66ff;" %>

    <%= link_to "Cancel", merchant_services_path,
      class: "inline-flex items-center justify-center rounded-xl px-6 py-3 font-semibold border border-slate-300 bg-white text-slate-900 hover:bg-slate-50" %>
  </div>
<% end %>
