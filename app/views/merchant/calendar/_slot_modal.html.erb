<div data-calendar-target="modal" class="fixed inset-0 z-50 hidden">
  <!-- Backdrop -->
  <div data-action="click->calendar#close"
       class="absolute inset-0 bg-black/50 backdrop-blur-sm"></div>

  <!-- Modal -->
  <div class="relative mx-auto mt-28 max-w-md px-4">
    <div class="rounded-3xl bg-slate-900 text-white shadow-xl border border-white/10 p-6">
      <h3 class="text-lg font-semibold">Time slot</h3>

      <p class="mt-2 text-sm text-white/70">
        <span data-calendar-target="date"></span> at
        <span data-calendar-target="time"></span>
      </p>

      <div class="mt-6 flex flex-col sm:flex-row gap-3">
        <button type="button"
                class="flex-1 rounded-xl px-4 py-2.5 text-sm font-semibold bg-red-500/90 hover:bg-red-500 transition">
          Mark unavailable
        </button>

        <button type="button"
                data-action="click->calendar#close"
                class="flex-1 rounded-xl px-4 py-2.5 text-sm font-semibold border border-white/20 hover:bg-white/10 transition">
          Close
        </button>
      </div>

      <p class="mt-4 text-xs text-white/50">
        Saving availability comes next.
      </p>
    </div>
  </div>
</div>
