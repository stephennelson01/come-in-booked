<div class="bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 py-10">
    <div class="flex items-end justify-between gap-6">
      <div>
        <p class="text-sm font-semibold text-slate-600">Services</p>
        <h1 class="mt-2 text-3xl font-semibold tracking-tight text-slate-900"><%= @business.name %></h1>
        <p class="mt-2 text-slate-600">Choose a service to start booking.</p>
      </div>

      <%= link_to "Book now",
          new_venue_booking_path(@business.slug),
          class: "rounded-full px-6 py-3 font-semibold text-white shadow-sm",
         l,
          style: "background:#2f66ff;" %>
    </div>

    <div class="mt-8 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @services.each do |service| %>
        <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
          <p class="text-xs font-semibold text-slate-500"><%= service.category.presence || "General" %></p>
          <p class="mt-2 text-lg font-semibold text-slate-900"><%= service.name %></p>

          <div class="mt-3 flex items-center justify-between text-sm text-slate-600">
            <span><%= service.duration_minutes %> mins</span>
            <span>Â£<%= (service.price_cents.to_i / 100.0) %></span>
          </div>

          <div class="mt-5">
            <%= link_to "Select time",
                new_venue_booking_path(@business.slug, service_id: service.id),
                class: "inline-flex w-full items-center justify-center rounded-2xl px-4 py-3 font-semibold text-white",
                style: "background:#0b1f46;" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
