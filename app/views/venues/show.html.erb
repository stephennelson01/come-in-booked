<div class="max-w-7xl mx-auto px-4 py-10">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="lg:col-span-2">
      <div class="aspect-[16/9] bg-gray-200 rounded-xl"></div>
      <h1 class="mt-6 text-3xl font-semibold"><%= @venue&.name || "Venue Name" %></h1>
      <p class="text-gray-600"><%= @venue&.locations&.first&.city || "City" %>, <%= @venue&.locations&.first&.region || "Region" %> • ★ 4.9 (1,204)</p>

      <div class="mt-8">
        <h2 class="text-xl font-semibold mb-3">Services</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% 6.times do %>
            <div class="rounded-xl ring-1 ring-black/10 p-4 bg-white">
              <div class="font-medium">Wash & Cut</div>
              <div class="text-sm text-gray-600">45 mins</div>
              <div class="mt-2 flex items-center justify-between">
                <div class="font-semibold">£35</div>
                <%= link_to "Book", checkout_start_path(venue_id: @venue&.id || 1), class: "rounded-full px-4 py-2 text-sm bg-blue-700 text-white" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div class="mt-10">
        <h2 class="text-xl font-semibold mb-3">Reviews</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% 4.times { %><%= render "shared/card_review" %><% } %>
        </div>
      </div>
    </div>

    <aside class="space-y-4">
      <div class="rounded-xl ring-1 ring-black/10 p-4 bg-white">
        <div class="font-semibold mb-1">Opening hours</div>
        <div class="text-sm text-gray-600">Mon–Sat 09:00–18:00</div>
      </div>
      <div class="rounded-xl ring-1 ring-black/10 bg-gray-100 aspect-square grid place-items-center">Map</div>
      <div class="rounded-xl ring-1 ring-black/10 p-4 bg-white">
        <div class="font-semibold">Contact</div>
        <div class="text-sm text-gray-600">+44 1234 567890</div>
      </div>
    </aside>
  </div>
</div>
