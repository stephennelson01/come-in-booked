<div class="bg-slate-50 min-h-screen">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 py-10">
    <div class="flex flex-col lg:flex-row gap-8">
      <!-- Left: service selector -->
      <div class="lg:w-1/3">
        <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
          <p class="text-sm font-semibold text-slate-600">Booking</p>
          <h1 class="mt-2 text-2xl font-semibold text-slate-900"><%= @business.name %></h1>

          <div class="mt-6">
            <p class="text-sm font-semibold text-slate-700">Choose a service</p>
            <div class="mt-3 space-y-2">
              <% @services.each do |s| %>
                <%= link_to new_venue_booking_path(@business.slug, service_id: s.id, date: @date),
                    class: "block rounded-2xl border px-4 py-3 hover:bg-slate-50 transition #{s == @service ? 'border-blue-500 bg-blue-50' : 'border-slate-200 bg-white'}" do %>
                  <div class="flex items-center justify-between">
                    <div>
                      <p class="font-semibold text-slate-900"><%= s.name %></p>
                      <p class="text-sm text-slate-600"><%= s.duration_minutes %> mins</p>
                    </div>
                    <p class="text-sm font-semibold text-slate-900">£<%= (s.price_cents.to_i / 100.0) %></p>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Right: time picker -->
      <div class="lg:w-2/3">
        <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
          <div class="flex items-center justify-between gap-4">
            <div>
              <p class="text-sm font-semibold text-slate-600">Pick a time</p>
              <h2 class="mt-1 text-xl font-semibold text-slate-900">
                <%= @service&.name %> — <%= @date.strftime("%A, %d %b %Y") %>
              </h2>
            </div>

            <div class="flex items-center gap-2">
              <%= link_to "Today", new_venue_booking_path(@business.slug, service_id: @service&.id, date: Date.current),
                  class: "rounded-full px-4 py-2 text-sm font-semibold border border-slate-200 hover:bg-slate-50" %>

              <%= link_to "Tomorrow", new_venue_booking_path(@business.slug, service_id: @service&.id, date: Date.current + 1),
                  class: "rounded-full px-4 py-2 text-sm font-semibold border border-slate-200 hover:bg-slate-50" %>
            </div>
          </div>

          <div class="mt-6 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-3">
            <% @slots.each do |slot| %>
              <%= button_to "Book #{slot.strftime("%H:%M")}",
                  create_venue_booking_path(@business.slug),
                  method: :post,
                  params: { service_id: @service.id, starts_at: slot.iso8601 },
                  class: "rounded-2xl px-4 py-3 text-sm font-semibold text-white shadow-sm",
                  style: "background:#2f66ff;" %>
            <% end %>
          </div>

          <p class="mt-6 text-sm text-slate-500">
            Availability is currently a simple stub (9am–6pm). Next we’ll compute real availability from staff + bookings.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
